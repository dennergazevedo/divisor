{
    "name": "divisor/sdk-laravel",
    "description": "Laravel SDK for Divisor A/B testing",
    "keywords": ["php", "laravel", "divisor", "ab-testing", "feature-flags", "divisor"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Marcelo Oliveira",
            "email": "marcelotk_15@hotmail.com"
        }
    ],
    "require": {
        "php": "^8.3.0",
        "laravel/framework": "^11.44.2|^12.52.0"
    },
    "require-dev": {
        "laravel/pint": "^1.27.1",
        "orchestra/testbench": "^9.0|^10.9.0",
        "pestphp/pest": "^3.8.5|^4.4.1",
        "pestphp/pest-plugin-type-coverage": "^3.6.1|^4.0.3",
        "phpstan/phpstan": "^2.1.39",
        "rector/rector": "^2.3.6",
        "symfony/var-dumper": "^7.4.4|^8.0"
    },
    "autoload": {
        "psr-4": {
            "Divisor\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist",
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "scripts": {
        "refactor": "rector",
        "lint": "pint --parallel",
        "test:refactor": "rector --dry-run",
        "test:lint": "pint --parallel --test",
        "test:types": "phpstan analyse --ansi",
        "test:unit": "pest --colors=always --coverage --parallel",
        "test": [
            "@test:refactor",
            "@test:lint",
            "@test:types",
            "@test:unit"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "Divisor\\DivisorServiceProvider"
            ]
        }
    }
}
